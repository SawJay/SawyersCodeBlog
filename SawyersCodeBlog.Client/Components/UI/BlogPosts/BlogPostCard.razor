@using SawyersCodeBlog.Client.Models
@using SawyersCodeBlog.Helpers


@if (blogPost is not null)
{
   
    <article class="row g-0 mb-4">
        <a class="col-sm-5 bg-repeat-0 bg-size-cover bg-position-center rounded-5" href="posts/@blogPost.Slug" aria-label="Post image" style="background-image: url(@(string.IsNullOrEmpty(blogPost.ImageUrl) ? ImageHelper.DefaultBlogPostImage : blogPost.ImageUrl )); min-height: 14rem">
        </a>
        <div class="col-sm-7">
                <div class="pt-4 pb-sm-4 ps-sm-4 pe-lg-4">
                    <h3>
                    <a href="posts/@blogPost.Slug">@blogPost.Title</a>
                    </h3>
                    <p class="d-sm-none d-md-block">@blogPost.Abstract</p>
                    <div class="d-flex flex-wrap align-items-center mt-n2">
                        <a class="nav-link text-body-secondary fs-sm fw-normal p-0 mt-2 me-3" href="#">
                            Shares
                            <i class="ai-share fs-lg ms-1"></i>
                        </a>
                        <a class="nav-link text-body-secondary fs-sm fw-normal d-flex align-items-end p-0 mt-2" href="#">
                            Comments
                            <i class="ai-message fs-lg ms-1"></i>
                        </a>
                        <span class="fs-xs opacity-20 mt-2 mx-3">|</span>
                        <span class="fs-xs text-body-secondary mt-2">Created Date</span>
                        <span class="fs-xs opacity-20 mt-2 mx-3">|</span>
                    <a class="badge text-nav fs-xs border mt-2" href="category/@blogPost.Category!.Id">@blogPost.Category!.Name</a>
                    </div>
                </div>
            </div>
    </article>

}

@code {
    [Parameter, EditorRequired]
    public BlogPostDTO? blogPost { get; set; }

}
